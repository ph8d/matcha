<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
		<link rel="stylesheet" href="../css/profile.css">

		<% if (typeof title == 'undefined') { %>
			<title>Matcha</title>
		<% } else { %>
			<title>Matcha - <%= title %></title>
		<% } %>

	</head>
	<body class="bg-light">
		<%- include('includes/_navbar.ejs'); -%>
		<main role="main">
			<div class="container my-4">
				<%- messages('includes/_messages', locals) %>
				<h4 class="mb-3">Interests:</h4>
				<div class="row">
					<form id="interest-form" method="POST">
						<div class="form-row">
							<div class="col-auto">
								<label class="sr-only" for="inlineFormInputGroup">Interest</label>
								<div class="input-group mb-2">
									<div class="input-group-prepend">
										<div class="input-group-text">+</div>
									</div>
									<input type="text" class="form-control" placeholder="Interest" name="interest">
								</div>
							</div>
							<div class="col-auto">
								<button id="addInterest" type="submit" class="btn btn-primary mb-2">Add</button>
							</div>
						</div>
					</form>
				</div>
				<div class="interests-container row">
					<% interests.forEach(interest => { %>
						<span class="badge badge-primary m-1">
							<span class="interest-value"><%=interest.value%></span>
							<span id="remove-interest"> ×</span>
						</span>
					<% }) %>
				</div>
				<h4 class="my-3">Pictures:</h4>
				<div class="container">
					<div class="row">
						<% pictures.forEach(picture => { %>
							<div class="col-md-4">
								<img data-id="<%=picture.id%>" class="img-thumbnail" src="<%=picture.src%>" alt="E">
							</div>
						<% }) %>
					</div>
				</div>
				<form id="upload-form" class="row my-4" method="POST">
					<div class="form-row">
						<div class="col">
							<div class="custom-file">
								<input id="upload-picture" type="file" class="custom-file-input" name="image">
								<label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
							</div>
						</div>
						<div class="col">
							<button id="upload" type="submit" class="btn btn-primary">upload</button>
						</div>
					</div>
				</form>
				<h4 class="mb-3">Location:</h4>
				<div id="map"></div>
			</div>
		</main>
		<hr class="m-4">
		<footer class="container"><p class="text-muted">© rtarasen 2018</p></footer>
		<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
		<script type="text/javascript" src="../js/XHRFormSend.js"></script>
		<script type="text/javascript" src="../js/profile.js"></script>
		<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBj7XDClRGcxA9xTV3KPIwyijuHODynh4w&amp&callback=initMap"></script>
	</body>
</html>