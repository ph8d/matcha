<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
		
		<% if (typeof title == 'undefined') { %>
			<title>Matcha</title>
		<% } else { %>
			<title>Matcha - <%= title %></title>
		<% } %>

	</head>
	<body>
		<%- include('includes/_navbar.ejs'); -%>
		<main role="main">
			<div class="container my-4">
				<%- messages('includes/_messages', locals) %>
				<form method="POST" action="">
					<fieldset class="form-group">
						<legend class="mb-4">Log in</legend>
						<div class="form-group">
							<label for="login" class="form-control-label">Login</label>
							<input type="text" name="login" id="login" class="form-control" placeholder="Login" minlength="4" required>
						</div>
						<div class="form-group">
							<label for="password" class="form-control-label">Password</label>
							<input type="password" pattern=".{8,24}" title="Length from 8 to 24 characters" name="password" id="password" class="form-control" placeholder="Password" required>
							<small><a href="/recovery" class="text-primary">Forgot your password?</a></small>
						</div>
						<button type="submit" class="btn btn-primary btn-lg btn-block" name="submit" value="OK">Log in</button>
					</fieldset>
				</form>
			</div>
		</main>
		<footer class="container"><p class="text-muted">Â© rtarasen 2018</p></footer>
